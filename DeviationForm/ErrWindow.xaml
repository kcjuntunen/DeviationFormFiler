<Window x:Name="ErrWindow1" x:Class="DeviationForm.ErrWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Error" Height="320" Width="640" MaxWidth="1920" MaxHeight="1080">
    <Grid>
        <TextBox x:Name="tbErrMsg" Margin="10,41,10,37" TextWrapping="Wrap" Text="TextBox" FontFamily="Consolas" Foreground="#FFC5C5C5" Background="Black"/>
        <Button x:Name="btnClose" Content="Close" Margin="0,0,10,10" HorizontalAlignment="Right" Width="75" Height="22" VerticalAlignment="Bottom" Click="btnClose_Click"/>
        <Label Content="If this error isn't your fault, copy the stuff in the window, and send it to your developer." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="612">
            <Label.Effect>
                <DropShadowEffect BlurRadius="3" ShadowDepth="2"/>
            </Label.Effect>
        </Label>
        <Button x:Name="btnSend" Content="Send" HorizontalAlignment="Left" Margin="467,258,0,0" VerticalAlignment="Top" Width="75" Click="btnSend_Click"/>

    </Grid>
</Window>
